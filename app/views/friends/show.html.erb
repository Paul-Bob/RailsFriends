<div class="card" style="width: 30rem;">
  <%# <img src="..." class="card-img-top" alt="img here"> %>
  <div class="card-body">
    <h5 class="card-title"><%= @friend.name %></h5>
    <p class="card-text">
      <%= @friend.email %> |
      <%= @friend.phone %>
    </p>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <%= link_to "Back to friends", friends_path, class:"btn btn-dark" %>
  </div>
</div>
